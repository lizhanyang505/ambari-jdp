<configuration supports_adding_forbidden="true">
   <property>
    <name>fusiondb_user</name>
    <display-name>FusionDB User</display-name>
    <value>spark</value>
    <property-type>USER</property-type>
    <value-attributes>
      <type>user</type>
      <overridable>false</overridable>
      <user-groups>
        <property>
          <type>cluster-env</type>
          <name>user_group</name>
        </property>
      </user-groups>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>fusiondb_group</name>
    <display-name>FusionDB Group</display-name>
    <value>spark</value>
    <property-type>GROUP</property-type>
    <description>fusiondb group</description>
    <value-attributes>
      <type>user</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>fusiondb_log_dir</name>
    <value>/var/log/spark2</value>
    <description/>
    <value-attributes>
      <type>directory</type>
      <editable-only-at-install>true</editable-only-at-install>
      <overridable>false</overridable>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>fusiondb_pid_dir</name>
    <value>/var/run/spark2</value>
    <display-name>FusionDB PID dir</display-name>
    <description/>
    <value-attributes>
      <type>directory</type>
      <editable-only-at-install>true</editable-only-at-install>
      <overridable>false</overridable>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>
